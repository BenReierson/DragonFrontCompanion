<?xml version = "1.0" encoding = "UTF-8" ?>
<Application xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:local="clr-namespace:DragonFrontCompanion"
             xmlns:helpers="clr-namespace:DragonFrontCompanion.Helpers"
             x:Class="DragonFrontCompanion.App">
    <Application.Resources>
        <ResourceDictionary>
            
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/Styles/Colors.xaml" />
                <ResourceDictionary Source="Resources/Styles/Styles.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <helpers:ValueToVisibilityConverter x:Key="VisibleWithValue" />
            <helpers:InverseBooleanConverter x:Key="InverseBoolean" />
        </ResourceDictionary>
    </Application.Resources>
</Application>
