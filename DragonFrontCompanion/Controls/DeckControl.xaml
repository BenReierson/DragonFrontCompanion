<?xml version="1.0" encoding="UTF-8" ?>
<ContentView
    x:Class="DragonFrontCompanion.Controls.DeckControl"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:helpers="clr-namespace:DragonFrontCompanion.Helpers"
    xmlns:controls="clr-namespace:DragonFrontCompanion.Controls">
    <ContentView.Resources>
        <ResourceDictionary>
            <helpers:CardImageConverter x:Key="CardImages" />
            <helpers:CardImagePlaceholderConverter x:Key="CardPlaceholders" />
            <helpers:InverseBooleanConverter x:Key="InverseBoolean" />
            <helpers:FactionToImageConverter x:Key="FactionImage" />
            <helpers:RelativeTimeConverter x:Key="RelativeTime" />
        </ResourceDictionary>
    </ContentView.Resources>
    <Grid
        x:Name="DeckGrid"
        Padding="6,6,6,2"
        ColumnSpacing="6"
        HeightRequest="185">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="100" />
            <ColumnDefinition Width="*" />
        </Grid.ColumnDefinitions>

        <controls:CustomCachedImage
            Grid.Column="1"
            Aspect="AspectFit"
            Margin="-8,-4"
            Opacity=".2"
            Source="{Binding DeckFaction, Converter={StaticResource FactionImage}}"
            HorizontalOptions="End"
            VerticalOptions="Start" />

        <StackLayout
            Grid.Column="0"
            Orientation="Vertical"
            Spacing="-2"
            VerticalOptions="Start">

            <controls:CustomCachedImage
                x:Name="ChampCachedImage"
                HeightRequest="100"
                ErrorPlaceholder="{Binding Champion, Converter={StaticResource CardPlaceholders}}"
                Source="{Binding Champion, Converter={StaticResource CardImages}, ConverterParameter='Large'}"
                WidthRequest="100">
                <controls:CustomCachedImage.GestureRecognizers>
                    <TapGestureRecognizer Tapped="Champion_Tapped" />
                </controls:CustomCachedImage.GestureRecognizers>
            </controls:CustomCachedImage>

            <Label Margin="0,4,0,0"
                Text="{Binding DeckFaction}" 
                TextColor="White"
                FontSize="16"/>
            <Label
                FontSize="12"
                Text="{Binding Count, StringFormat='{0} / 30'}"
                TextColor="White" />
            <Label
                FontSize="Small"
                IsVisible="{Binding IsValid}"
                Text="Ready"
                TextColor="LightGreen" />
            <Label
                FontSize="Small"
                IsVisible="{Binding IsValid, Converter={StaticResource InverseBoolean}}"
                Text="Not Ready"
                TextColor="Red" />
            <Label
                x:Name="PriceLabel"
                Margin="0,2,0,0"
                FontSize="10"
                IsVisible="False"
                Text="{Binding TotalScrapPrice, StringFormat='{0} SCRAP'}"
                TextColor="#D0D6D7" />
            <Label
                x:Name="ModifiedLabel"
                Margin="0,2,-80,0"
                FontSize="10"
                IsVisible="False"
                Text="{Binding LastModified, Converter={StaticResource RelativeTime}, StringFormat='saved {0}'}"
                TextColor="Gray" />

            <ImageButton
                    x:Name="ContextMenu"
                    HeightRequest="22"
                    BackgroundColor="Transparent"
                    Padding="0"
                    HorizontalOptions="Start"
                    Aspect="AspectFit"
                    Rotation="90"
                    Scale="{OnPlatform .6, Android=1.1}"
                    Margin="{OnPlatform Android='-10,0,0,0', iOS='-8,-8,0,0', WinUI='-8,-14,0,0'}"
                    Source="iconmenu.png"
                    VerticalOptions="End"
                    Clicked="OnContextMenuTapped">
            </ImageButton>
        </StackLayout>
        <Grid Grid.Column="1">
            <Grid
                x:Name="StatsGrid"
                Margin="5"
                VerticalOptions="End">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" x:Name="StatsThirdColumn" />
                </Grid.ColumnDefinitions>
                <Grid
                    x:Name="CostChart"
                    Grid.Column="0"
                    ColumnSpacing="5"
                    MinimumHeightRequest="30"
                    VerticalOptions="End">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                        <ColumnDefinition Width="Auto" />
                    </Grid.ColumnDefinitions>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>
                    <Label
                        Grid.Row="0"
                        Grid.ColumnSpan="8"
                        FontSize="12"
                        HeightRequest="40"
                        HorizontalOptions="Center"
                        VerticalOptions="Start"
                        Text="Cost Distribution"
                        TextColor="#15CEEA" />
                    <BoxView
                        Grid.Row="0"
                        Grid.Column="0"
                        BackgroundColor="#15CEEA"
                        HeightRequest="{Binding CostDistribution[0].Weight}"
                        VerticalOptions="End"
                        WidthRequest="10"
                        Color="#15CEEA" />
                    <BoxView
                        Grid.Row="0"
                        Grid.Column="1"
                        BackgroundColor="#15CEEA"
                        HeightRequest="{Binding CostDistribution[1].Weight}"
                        VerticalOptions="End"
                        WidthRequest="10"
                        Color="#15CEEA" />
                    <BoxView
                        Grid.Row="0"
                        Grid.Column="2"
                        BackgroundColor="#15CEEA"
                        HeightRequest="{Binding CostDistribution[2].Weight}"
                        VerticalOptions="End"
                        WidthRequest="10"
                        Color="#15CEEA" />
                    <BoxView
                        Grid.Row="0"
                        Grid.Column="3"
                        BackgroundColor="#15CEEA"
                        HeightRequest="{Binding CostDistribution[3].Weight}"
                        VerticalOptions="End"
                        WidthRequest="10"
                        Color="#15CEEA" />
                    <BoxView
                        Grid.Row="0"
                        Grid.Column="4"
                        BackgroundColor="#15CEEA"
                        HeightRequest="{Binding CostDistribution[4].Weight}"
                        VerticalOptions="End"
                        WidthRequest="10"
                        Color="#15CEEA" />
                    <BoxView
                        Grid.Row="0"
                        Grid.Column="5"
                        BackgroundColor="#15CEEA"
                        HeightRequest="{Binding CostDistribution[5].Weight}"
                        VerticalOptions="End"
                        WidthRequest="10"
                        Color="#15CEEA" />
                    <BoxView
                        Grid.Row="0"
                        Grid.Column="6"
                        BackgroundColor="#15CEEA"
                        HeightRequest="{Binding CostDistribution[6].Weight}"
                        VerticalOptions="End"
                        WidthRequest="10"
                        Color="#15CEEA" />
                    <BoxView
                        Grid.Row="0"
                        Grid.Column="7"
                        BackgroundColor="#15CEEA"
                        HeightRequest="{Binding CostDistribution[7].Weight}"
                        VerticalOptions="End"
                        WidthRequest="10"
                        Color="#15CEEA" />
                    <Label
                        Grid.Row="1"
                        Grid.Column="0"
                        Text="0"
                        TextColor="#15CEEA" />
                    <Label
                        Grid.Row="1"
                        Grid.Column="1"
                        Text="1"
                        TextColor="#15CEEA" />
                    <Label
                        Grid.Row="1"
                        Grid.Column="2"
                        Text="2"
                        TextColor="#15CEEA" />
                    <Label
                        Grid.Row="1"
                        Grid.Column="3"
                        Text="3"
                        TextColor="#15CEEA" />
                    <Label
                        Grid.Row="1"
                        Grid.Column="4"
                        Text="4"
                        TextColor="#15CEEA" />
                    <Label
                        Grid.Row="1"
                        Grid.Column="5"
                        Text="5"
                        TextColor="#15CEEA" />
                    <Label
                        Grid.Row="1"
                        Grid.Column="6"
                        Text="6"
                        TextColor="#15CEEA" />
                    <Label
                        Grid.Row="1"
                        Grid.Column="7"
                        Text="7+"
                        TextColor="#15CEEA" />
                </Grid>

                <StackLayout Grid.Column="1"
                    HorizontalOptions="Center"
                    Orientation="Vertical"
                    Spacing="0"
                    VerticalOptions="End">
                    <Label
                        FontSize="12"
                        LineBreakMode="NoWrap"
                        Text="{Binding UnitCount, StringFormat='{0} units'}"
                        TextColor="White" />
                    <Label
                        FontSize="12"
                        LineBreakMode="NoWrap"
                        Text="{Binding FortCount, StringFormat='{0} forts'}"
                        TextColor="White" />
                    <Label
                        FontSize="12"
                        LineBreakMode="NoWrap"
                        Text="{Binding SpellCount, StringFormat='{0} spells'}"
                        TextColor="White" />
                </StackLayout>
            </Grid>
            <StackLayout Orientation="Vertical">
                <Grid>
                    <Grid.GestureRecognizers>
                        <TapGestureRecognizer Tapped="EditModeToggle" />
                    </Grid.GestureRecognizers>
                    <Label
                        x:Name="NameLabel"
                        FontAttributes="Bold"
                        FontSize="17"
                        LineBreakMode="TailTruncation"
                        Text="{Binding Name}"
                        TextColor="#E1CA35" />
                    <Entry
                        x:Name="NameEntry"
                        Placeholder="(Deck Name)"
                        PlaceholderColor="DarkGray"
                        Margin="4"
                        BackgroundColor="LightGray"
                        FontSize="17"
                        IsVisible="False"
                        Text="{Binding Name, Mode=TwoWay}" 
                        TextColor="Black"/>
                </Grid>
                <Grid>
                    <ScrollView HeightRequest="80">
                        <Label
                            x:Name="DescriptionLabel"
                            FontSize="14"
                            Text="{Binding Description}"
                            TextColor="White">
                            <Label.GestureRecognizers>
                                <TapGestureRecognizer Tapped="EditModeToggle" />
                            </Label.GestureRecognizers>
                        </Label>
                    </ScrollView>
                    <Editor
                        x:Name="DescriptionEntry"
                        Placeholder="(Deck Description)"
                        PlaceholderColor="DarkGray"
                        Margin="4"
                        BackgroundColor="LightGray"
                        FontSize="14"
                        HeightRequest="120"
                        IsVisible="False"
                        Text="{Binding Description, Mode=TwoWay}"
                        TextColor="Black" />
                </Grid>
            </StackLayout>
        </Grid>
    </Grid>
</ContentView>
